{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" },
          { "PathPrefix": "/api" }
        ]
      },
      "locations-route": {
        "ClusterId": "location-cluster",
        "Match": {
          "Path": "/api/locations/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/locations" },
          { "PathPrefix": "/api/locations" }
        ]
      },
      "menu-route": {
        "ClusterId": "menu-cluster",
        "Match": {
          "Path": "/api/menu/{**catch-all}"
        },
        "Transforms": [
