          { "PathPrefix": "/api" }
        ]
      },
      "payment-gateway-route": {
        "ClusterId": "payment-gateway-cluster",
        "Match": {
          "Path": "/api/gateway/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/gateway" },
          { "PathPrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://localhost:5101"
          }
        }
      },
      "location-cluster": {
