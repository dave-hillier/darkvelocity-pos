          { "PathPrefix": "/api" }
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/inventory" },
          { "PathPrefix": "/api" }
        ]
      },
      "procurement-route": {
        "ClusterId": "procurement-cluster",
        "Match": {
          "Path": "/api/procurement/{**catch-all}"
